{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "*.css",
      "use": "@vercel/static"
    },
    {
      "src": "*.js",
      "use": "@vercel/static"
    },
    {
      "src": "pictures/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "data/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [

    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/auth/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/callback",
      "dest": "/backend/server.js"
    },

    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/login",
      "dest": "/login.html"
    },
    {
      "src": "/simulation",
      "dest": "/simulation.html"
    },
    {
      "src": "/history",
      "dest": "/history.html"
    },
    {
      "src": "/progress",
      "dest": "/progress.html"
    },
    {
      "src": "/trainer",
      "dest": "/trainer.html"
    },
    {
      "src": "/attempt-details",
      "dest": "/attempt-details.html"
    },
    {
      "src": "/base",
      "dest": "/base.html"
    },
    {
      "src": "/pictures/(.*)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}